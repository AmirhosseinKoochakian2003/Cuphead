<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.Profile"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@css/profile.css"
            styleClass="BackGround">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="Profile menu" styleClass="name"/>
            <Button text="change username" alignment="CENTER" onMouseClicked="#changeName" />
            <Button text="change password" alignment="CENTER" onMouseClicked="#changePassword" />
            <Button text="delete account" alignment="CENTER" onMouseClicked="#delete" />
            <Button text="logout" alignment="CENTER" onMouseClicked="#logout" />
            <Button text="back" alignment="CENTER" onMouseClicked="#back" />
        </VBox>
    </center>

</BorderPane>
